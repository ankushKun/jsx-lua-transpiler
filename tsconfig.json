{
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022","DOM"],
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
  